<view class="edit-wrapper">
	<view class="edit-item" bindtap="showDatePicker">
		<view class="item-tit">成交时间</view>
		<view class="item-section">{{year}}/{{month}}/{{day}}</view>
		<view class="item-unit">
			<view class="iconfont icon-more"></view>
		</view>
	</view>
	<!-- sum -->
	<view class="edit-item" bindtap="navToEdit" data-param="{{auction.sum}}">
		<text class="item-tit">成交金额（元）</text>
		<view class="item-section">
			{{auction.sum}}
		</view>
		<view class='item-unit'>
			<view class='iconfont icon-more'></view>
		</view>
	</view>
	<!-- amount -->
	<view class="edit-item" bindtap="navToEdit" data-param="{{auction.amount}}">
		<text class="item-tit">成交总量（吨）</text>
		<view class="item-section">
			{{auction.amount}}
		</view>
		<view class='item-unit'>
			<view class='iconfont icon-more'></view>
		</view>
	</view>
	<!-- waterin -->
	<view class="edit-item" bindtap="navToEdit" data-param="{{auction.waterin}}">
		<view class="item-tit">贴水贴杂（个）</view>
		<view class="item-section">
			{{auction.waterin}}
		</view>
		<view class='item-unit'>
			<view class='iconfont icon-more'></view>
		</view>
	</view>
	<!-- 保存按钮 -->
	<view class="edit-save" bindtap="saveEdit">保存</view>
</view>