page {
	display: block;
	min-height: 100%;
	background-color: rgb(245, 245, 247);
}

.filter-wrapper {
	height: 140rpx;
	background: rgb(240, 247, 248);
	color: rgb(68, 74, 86);
}

.filter-date,
.filter-title {
	float: left;
	height: 140rpx;
	display: flex;
	flex-direction: column;
	align-items: center;
	box-sizing: border-box;
}

.filter-date {
	width: 250rpx;
	padding-top: 20rpx;
}

.filter-title {
	width: 350rpx;
	line-height: 140rpx;
}

.filter-others {
	float: left;
	height: 140rpx;
	width: 130rpx;
	padding-left: 20rpx;
	overflow: hidden;
	text-align: center;
}

.filter-others-search {
	float: left;
	width: 95rpx;
	height: 140rpx;
	line-height: 140rpx;
	text-align: center;
}


